<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Properties>
        <Property name="PID">????</Property>
        <Property name="LOG_PATTERN">%clr{%d{yyyy-MM-dd HH:mm:ss.SSS}}{faint} %clr{%5p} %clr{${sys:PID}}{magenta} %clr{---}{faint} %clr{[%15.15t]}{faint} %clr{%-40.40c{1.}}{cyan} %clr{:}{faint} %m%n%wEx</Property>
    </Properties>
    <Appenders>
        <Console name="LogToConsole" target="SYSTEM_OUT">
            <JsonTemplateLayout eventTemplateUri="classpath:log4j2JsonLayout.json"/>
        </Console>
        <RollingFile name="LogToRollingFile" fileName="/tmp/logs/ogcapi.log" filePattern="/tmp/logs/ogcapi-%i.%d{yyyy-MM-dd}.log">
            <JsonTemplateLayout eventTemplateUri="classpath:log4j2JsonLayout.json"/>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="20"/>
        </RollingFile>
    </Appenders>
    <Loggers>
        <!-- avoid duplicated logs with additivity=false -->
        <Logger name="au.org.aodn.ogcapi" level="debug" additivity="false">
            <AppenderRef ref="LogToRollingFile"/>
            <AppenderRef ref="LogToConsole"/>
        </Logger>
        <Root level="info">
            <AppenderRef ref="LogToRollingFile"/>
            <AppenderRef ref="LogToConsole"/>
        </Root>
    </Loggers>
    <!-- Profile-specific configurations -->
    <SpringProfile name="dev | test">
        <Appenders>
            <Console name="DevConsole" target="SYSTEM_OUT">
                <PatternLayout pattern="[DEV] %d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n"/>
            </Console>
        </Appenders>
        <Loggers>
            <Logger name="au.org.aodn.esindexer" level="debug" additivity="false">
                <AppenderRef ref="DevConsole"/>
            </Logger>
            <Root level="info">
                <AppenderRef ref="DevConsole"/>
            </Root>
        </Loggers>
    </SpringProfile>
</Configuration>
